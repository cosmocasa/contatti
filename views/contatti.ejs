<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Contatti - CRM Immobiliare</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">CRM Immobiliare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/nuovo-contatto">Nuovo Contatto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/contatti">Lista Contatti</a>
                    </li>
                </ul>
                <% if (locals.user && user) { %>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> <%= user.username %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Lista Contatti</h2>
            <a href="/nuovo-contatto" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nuovo Contatto
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Filtri</h5>
            </div>
            <div class="card-body">
                <form id="search-form" class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Ricerca</label>
                        <input type="text" class="form-control" id="search" name="search" placeholder="Nome, cognome o telefono" value="<%= locals.filters && filters.search ? filters.search : '' %>">
                    </div>
                    <div class="col-md-4">
                        <label for="filter-tipo" class="form-label">Tipo di Ricerca</label>
                        <select class="form-select" id="filter-tipo" name="tipo">
                            <option value="">Tutti</option>
                            <option value="Vendita" <%= locals.filters && filters.tipo === 'Vendita' ? 'selected' : '' %>>Acquisto</option>
                            <option value="Affitto" <%= locals.filters && filters.tipo === 'Affitto' ? 'selected' : '' %>>Affitto</option>
                            <option value="Entrambi" <%= locals.filters && filters.tipo === 'Entrambi' ? 'selected' : '' %>>Entrambi</option>
                            <option value="Altro" <%= locals.filters && filters.tipo === 'Altro' ? 'selected' : '' %>>Altro</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="filter-date" class="form-label">Data (dal)</label>
                        <input type="date" class="form-control" id="filter-date" name="date" value="<%= locals.filters && filters.date ? filters.date : '' %>">
                    </div>
                    <div class="col-12 text-end">
                        <button type="button" class="btn btn-secondary" id="reset-filters">Reset</button>
                        <button type="submit" class="btn btn-primary" id="apply-filters">Applica Filtri</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Cognome</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Motivo Chiamata</th>
                        <th scope="col">Tipo Ricerca</th>
                        <th scope="col">Data Chiamata</th>
                        <th scope="col">Azioni</th>
                    </tr>
                </thead>
                <tbody id="contacts-table-body">
                    <% if (contatti && contatti.length > 0) { %>
                        <% contatti.forEach((contatto, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= contatto.nome %></td>
                                <td><%= contatto.cognome %></td>
                                <td><%= contatto.numero_telefono %></td>
                                <td><%= contatto.motivo_chiamata %></td>
                                <td><span class="badge <%= contatto.tipo_ricerca === 'Vendita' ? 'bg-success' : contatto.tipo_ricerca === 'Affitto' ? 'bg-primary' : 'bg-secondary' %>">
                                    <%= contatto.tipo_ricerca %>
                                </span></td>
                                <td><%= new Date(contatto.data_chiamata).toLocaleString('it-IT') %></td>
                                <td>
                                    <button class="btn btn-sm btn-info view-contact" data-id="<%= contatto.id %>">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="text-center">Nessun contatto trovato</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal per visualizzare i dettagli del contatto -->
    <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contactModalLabel">Dettagli Contatto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="contact-details">
                    <!-- I dettagli del contatto verranno inseriti qui via JavaScript -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">CRM Immobiliare &copy; <%= new Date().getFullYear() %></span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/contacts.js"></script>
</body>
</html> 